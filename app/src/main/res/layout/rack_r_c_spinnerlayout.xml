<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name here..." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:text="Rows :"
        android:id="@+id/row_tv"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_tv"
        android:text="Cols :"
        android:id="@+id/column_tv"
        android:textSize="25dp"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_spinner"
        android:layout_below="@+id/et_name"
        android:layout_marginLeft="80dp"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/column_spinner"
        android:layout_below="@+id/row_spinner"
        android:layout_toRightOf="@+id/column_tv"
        android:layout_marginTop="15dp"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/bt_ok"
        android:text="OK"
        android:textSize="18dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/column_tv"/>

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@+id/column_spinner"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/bt_ok"
        android:text="Cancel"
        android:textSize="18dp" />

</RelativeLayout>